{
  "name":        "ingenerator/config",
  "description": "Useful extensions to the kohana config system, including for loading deployment config from a JSON",
  "keywords":    ["kohana", "config" ],
  "homepage":    "https://github.com/ingenerator/configuration",
  "type":        "library",
  "license":     "BSD-3-Clause",
  "authors":     [
    {
      "name":     "Andrew Coulton",
      "email":    "andrew@ingenerator.com",
      "homepage": "http://www.ingenerator.com"
    }
  ],

  "require": {
    "php":           "^7.4 || ~8.0.0",
    "kohana/core":   "3.3.*"
  },

  "require-dev": {
    "ingenerator/koharness" : "*@dev",
    "phpspec/phpspec":        "^2.0",
    "phpspec/prophecy":       "^1.1"
  },

  "suggest": {
  },

  "support": {
    "issues": "https://github.com/ingenerator/config/issues",
    "source": "https://github.com/ingenerator/config"
  },

  "autoload": {
    "psr-0": {
      "Ingenerator\\Config\\": "src/"
    }
  },  
  "autoload-dev": {
    "psr-0": {
      "spec":                  ""
    }
  },

  "bin": [],

  "extra": {
    "branch-alias": {
      "dev-master": "0.2.x-dev"
    }
  },

  "config": {
    "preferred-install": "dist"
  }
}
